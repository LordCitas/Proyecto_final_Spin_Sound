{% extends 'base.html.twig' %}

{% block title %}Spin&Sound | Sign In{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="flex w-full min-h-screen font-sans bg-background-dark">
        <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-t from-background-dark via-transparent to-transparent z-10"></div>
            <div class="absolute inset-0 bg-cover bg-center scale-105" style="background-image: url('https://images.unsplash.com/photo-1603048588665-791ca8aea617?q=80&w=2000&auto=format&fit=crop');"></div>

            <div class="relative z-20 flex flex-col justify-between p-16 h-full w-full">


                <div class="max-w-md">
                    <h1 class="text-5xl font-black text-white leading-[1.1] mb-6">Experimenta lo mejor de la parte vintage de la música.</h1>
                    <p class="text-xl text-slate-300 font-medium">¡Conviertete en un gran coleccionista empezando por comprar nuestros grandisoso productos de gran calidad!</p>
                </div>

            </div>
        </div>

        <div class="w-full lg:w-1/2 flex flex-col justify-center px-8 sm:px-16 lg:px-24 xl:px-32 py-12 bg-background-dark">
            <div class="max-w-[440px] w-full mx-auto lg:mx-0">
                <div class="mb-10">
                    <h2 class="text-5xl font-black text-white tracking-tight mb-4">Bienvenido</h2>
                    <p class="text-slate-400 font-medium">Porfavor, ingrese los datos suficientes</p>
                </div>

                <form method="post" class="space-y-6">
                    {% if error %}
                        <div class="rounded-md bg-red-900/50 border border-red-500 p-3">
                            <p class="text-sm font-medium text-red-200">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                    {% endif %}

                    <div class="space-y-2">
                        <label for="username" class="text-xs font-bold text-slate-400 uppercase tracking-[0.2em]">Email</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-500 group-focus-within:text-[#e00000] transition-colors duration-200">
                                <span class="material-symbols-outlined text-xl">mail</span>
                            </div>
                            <input name="_username" id="username" type="email" required autofocus value="{{ last_username }}" class="block w-full pl-11 pr-4 py-4 bg-white/5 border border-white/10 rounded-xl text-white placeholder:text-slate-600 focus:outline-none focus:ring-2 focus:ring-[#e00000]/50 focus:border-[#e00000] transition-colors duration-200 font-medium" placeholder="name@example.com" />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <div class="flex justify-between items-center">
                            <label for="password" class="text-xs font-bold text-slate-400 uppercase tracking-[0.2em]">Contraseña</label>
                        </div>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-500 group-focus-within:text-[#e00000] transition-colors duration-200">
                                <span class="material-symbols-outlined text-xl">lock</span>
                            </div>
                            <input name="_password" id="password" type="password" required class="block w-full pl-11 pr-12 py-4 bg-white/5 border border-white/10 rounded-xl text-white placeholder:text-slate-600 focus:outline-none focus:ring-2 focus:ring-[#e00000]/50 focus:border-[#e00000] transition-colors duration-200 font-medium" placeholder="••••••••" />
                            <button class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-500 hover:text-white" type="button">
                                <span class="material-symbols-outlined text-xl">visibility</span>
                            </button>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" style="background-color: #e00000;" class="w-full bg-primary hover:bg-secondary text-white font-bold text-lg py-4 rounded-xl shadow-lg shadow-primary/20 transform transition-all active:scale-[0.98]">
                        Sign In
                    </button>
                </form>

                <div class="relative my-10">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-white/10"></div>
                    </div>
                    <div class="relative flex justify-center text-xs">
                        <span class="px-4 bg-background-dark text-slate-500 font-bold uppercase tracking-[0.2em]">O continua con</span>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <button type="button" class="flex items-center justify-center gap-3 px-4 py-3 border border-white/10 rounded-xl hover:bg-white/5 transition-colors text-white text-sm font-bold">
                        <svg class="h-5 w-5" viewBox="0 0 24 24"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/><path d="M12 5.38c1.62 0 3.06.56 4.21 1.66l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 12-4.53z" fill="#EA4335"/></svg>
                        Google
                    </button>
                    <button type="button" class="flex items-center justify-center gap-3 px-4 py-3 border border-white/10 rounded-xl hover:bg-white/5 transition-colors text-white text-sm font-bold">
                        <svg class="h-5 w-5 fill-white" viewBox="0 0 24 24"><path d="M12.152 6.896c-.948 0-2.415-1.078-3.96-1.04-2.04.027-3.91 1.183-4.961 3.014-2.117 3.675-.546 9.103 1.519 12.09 1.013 1.454 2.208 3.09 3.792 3.03 1.52-.065 2.09-.987 3.935-.987 1.831 0 2.35.987 3.96.948 1.637-.026 2.676-1.48 3.676-2.948 1.156-1.688 1.636-3.325 1.662-3.415-.039-.013-3.182-1.221-3.22-4.857-.026-3.04 2.48-4.494 2.597-4.559-1.429-2.09-3.623-2.324-4.39-2.376-2-.156-3.675 1.09-4.61 1.09zM15.53 3.83c.843-1.012 1.4-2.427 1.245-3.83-1.207.052-2.662.805-3.532 1.818-.78.896-1.454 2.338-1.273 3.714 1.338.104 2.715-.688 3.559-1.702z"/></svg>
                        Apple
                    </button>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
