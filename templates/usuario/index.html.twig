{% extends 'base.html.twig' %}

{% block title %}Perfil de {{ usuario.nombre }} - Spin&Sound{% endblock %}

{% block body %}
<main class="flex-1 animate-reveal">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="max-w-5xl mx-auto">
            <!-- Header -->
            <div class="mb-8">
                <div class="flex items-center gap-3 mb-4">
                    <a href="{{ path('app_home') }}" class="p-2 hover:bg-surface-dark rounded-lg transition-colors" title="Volver">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 256 256">
                            <path d="M224,128a8,8,0,0,1-8,8H59.31l58.35,58.34a8,8,0,0,1-11.32,11.32l-72-72a8,8,0,0,1,0-11.32l72-72a8,8,0,0,1,11.32,11.32L59.31,120H216A8,8,0,0,1,224,128Z"></path>
                        </svg>
                    </a>
                    <h1 class="text-3xl font-bold tracking-tight">Perfil de Usuario</h1>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Columna Izquierda: Avatar y Acciones -->
                <div class="lg:col-span-1">
                    <div class="bg-surface-dark border border-gray-800 rounded-lg p-6 sticky top-24">
                        <!-- Avatar -->
                        <div class="flex flex-col items-center mb-6">
                            <div class="w-32 h-32 rounded-full bg-gradient-to-br from-[#e00000] to-[#a00000] flex items-center justify-center mb-4">
                                <span class="text-5xl font-bold text-white">{{ usuario.nombre|slice(0, 1)|upper }}</span>
                            </div>
                            <h2 class="text-xl font-bold text-center">{{ usuario.nombre }}</h2>
                            <p class="text-sm text-on-surface-muted-dark text-center">{{ usuario.email }}</p>
                        </div>

                        <!-- Estado -->
                        <div class="mb-6">
                            <div class="flex items-center justify-center gap-2 mb-2">
                                {% if usuario.deleteAt %}
                                    <span class="px-4 py-2 rounded-full text-sm font-semibold bg-red-900 text-red-300 flex items-center gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                            <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm-8-80V80a8,8,0,0,1,16,0v56a8,8,0,0,1-16,0Zm20,36a12,12,0,1,1-12-12A12,12,0,0,1,140,172Z"></path>
                                        </svg>
                                        BANEADO
                                    </span>
                                {% else %}
                                    <span class="px-4 py-2 rounded-full text-sm font-semibold bg-green-900 text-green-300 flex items-center gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                                            <path d="M229.66,77.66l-128,128a8,8,0,0,1-11.32,0l-56-56a8,8,0,0,1,11.32-11.32L96,188.69,218.34,66.34a8,8,0,0,1,11.32,11.32Z"></path>
                                        </svg>
                                        ACTIVO
                                    </span>
                                {% endif %}
                            </div>
                            {% if usuario.deleteAt %}
                                <p class="text-xs text-center text-on-surface-muted-dark">Baneado el {{ usuario.deleteAt|date('d/m/Y H:i') }}</p>
                            {% endif %}
                        </div>

                        <!-- Roles -->
                        <div class="mb-6">
                            <h3 class="text-sm font-semibold mb-2 text-on-surface-muted-dark">ROLES</h3>
                            <div class="flex flex-wrap gap-2">
                                {% for role in usuario.roles %}
                                    <span class="px-3 py-1 rounded text-xs font-semibold {% if role == 'ROLE_SUPER_ADMIN' %}bg-purple-900 text-purple-300{% elseif role == 'ROLE_ADMIN' %}bg-blue-900 text-blue-300{% else %}bg-gray-700 text-gray-300{% endif %}">
                                        {{ role|replace({'ROLE_': ''}) }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>

                        <!-- Acciones -->
                        <div class="space-y-2">
                            <a href="{{ path('app_usuario_edit', {id: usuario.id}) }}" class="w-full flex items-center justify-center gap-2 bg-[#e00000] hover:bg-[#c00000] text-white font-medium px-4 py-2.5 rounded-lg transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                                    <path d="M227.31,73.37,182.63,28.68a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31L227.31,96a16,16,0,0,0,0-22.63ZM92.69,208H48V163.31l88-88L180.69,120ZM192,108.68,147.31,64l24-24L216,84.68Z"></path>
                                </svg>
                                Editar Perfil
                            </a>
                            
                            <a href="{{ path('app_pedido_mis_pedidos') }}" class="w-full flex items-center justify-center gap-2 bg-[#e00000] hover:bg-[#c00000] text-white font-medium px-4 py-2.5 rounded-lg transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                                    <path d="M216,64H176a48,48,0,0,0-96,0H40A16,16,0,0,0,24,80V200a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V80A16,16,0,0,0,216,64ZM128,32a32,32,0,0,1,32,32H96A32,32,0,0,1,128,32Zm88,168H40V80H216V200Z"></path>
                                </svg>
                                Ver Mis Pedidos
                            </a>
                            
                            <a href="{{ path('app_logout') }}" class="w-full flex items-center justify-center gap-2 bg-red-600 hover:bg-red-700 text-white font-medium px-4 py-2.5 rounded-lg transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                                    <path d="M120,216a8,8,0,0,1-8,8H48a8,8,0,0,1-8-8V40a8,8,0,0,1,8-8h64a8,8,0,0,1,0,16H56V208h56A8,8,0,0,1,120,216Zm109.66-93.66-40-40a8,8,0,0,0-11.32,11.32L204.69,120H112a8,8,0,0,0,0,16h92.69l-26.35,26.34a8,8,0,0,0,11.32,11.32l40-40A8,8,0,0,0,229.66,122.34Z"></path>
                                </svg>
                                Cerrar Sesión
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha: Información Detallada -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Información Personal -->
                    <div class="bg-surface-dark border border-gray-800 rounded-lg p-6">
                        <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#e00000" viewBox="0 0 256 256">
                                <path d="M230.92,212c-15.23-26.33-38.7-45.21-66.09-54.16a72,72,0,1,0-73.66,0C63.78,166.78,40.31,185.66,25.08,212a8,8,0,1,0,13.85,8c18.84-32.56,52.14-52,89.07-52s70.23,19.44,89.07,52a8,8,0,1,0,13.85-8ZM72,96a56,56,0,1,1,56,56A56.06,56.06,0,0,1,72,96Z"></path>
                            </svg>
                            Información Personal
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="text-sm font-semibold text-on-surface-muted-dark">ID</label>
                                <p class="text-lg">{{ usuario.id }}</p>
                            </div>
                            <div>
                                <label class="text-sm font-semibold text-on-surface-muted-dark">Nombre Completo</label>
                                <p class="text-lg">{{ usuario.nombre }}</p>
                            </div>
                            <div>
                                <label class="text-sm font-semibold text-on-surface-muted-dark">Email</label>
                                <p class="text-lg">{{ usuario.email }}</p>
                            </div>
                            <div>
                                <label class="text-sm font-semibold text-on-surface-muted-dark">Teléfono</label>
                                <p class="text-lg">{{ usuario.telefono ?? 'No especificado' }}</p>
                            </div>
                            <div class="md:col-span-2">
                                <label class="text-sm font-semibold text-on-surface-muted-dark">Dirección</label>
                                <p class="text-lg">{{ usuario.direccion }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Información del Sistema -->
                    <div class="bg-surface-dark border border-gray-800 rounded-lg p-6">
                        <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#e00000" viewBox="0 0 256 256">
                                <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm64-88a8,8,0,0,1-8,8H128a8,8,0,0,1-8-8V72a8,8,0,0,1,16,0v48h48A8,8,0,0,1,192,128Z"></path>
                            </svg>
                            Información del Sistema
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="text-sm font-semibold text-on-surface-muted-dark">Fecha de Registro</label>
                                <p class="text-lg">{{ usuario.createdAt ? usuario.createdAt|date('d/m/Y H:i') : 'No disponible' }}</p>
                            </div>
                            <div>
                                <label class="text-sm font-semibold text-on-surface-muted-dark">Última Actualización</label>
                                <p class="text-lg">{{ usuario.updatedAt ? usuario.updatedAt|date('d/m/Y H:i') : 'Nunca' }}</p>
                            </div>
                            {% if usuario.deleteAt %}
                            <div class="md:col-span-2">
                                <label class="text-sm font-semibold text-red-400">Fecha de Baneo</label>
                                <p class="text-lg text-red-300">{{ usuario.deleteAt|date('d/m/Y H:i') }}</p>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
