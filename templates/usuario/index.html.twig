{% extends 'base.html.twig' %}

{% block title %}Spin&Sound | Perfil de usuario{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
  <main class="container mx-auto px-4 py-8">
    {% if usuario is defined %}
      <div class="max-w-3xl mx-auto bg-surface-light dark:bg-surface-dark rounded-lg shadow p-6">
        <div class="flex items-center gap-6">
          <img class="h-24 w-24 rounded-full object-cover" src="{{ usuario.avatar ?? 'https://via.placeholder.com/150' }}" alt="Avatar usuario">
          <div>
            <h1 class="text-2xl font-bold">{{ usuario.nombre ?: 'Usuario' }}</h1>
            <p class="text-sm text-on-surface-muted-light dark:text-on-surface-muted-dark">{{ usuario.email }}</p>
            <div class="mt-3 flex gap-2">
              <a class="rounded bg-primary px-4 py-2 text-white hover:bg-primary/90 transition-colors" href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">Editar perfil</a>
              <a class="rounded border border-gray-300 dark:border-gray-700 px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" href="{{ path('app_home') }}">Volver</a>
              <a class="rounded bg-red-600 px-4 py-2 text-white hover:bg-red-700 transition-colors" href="{{ path('app_logout') }}">Cerrar Sesión</a>
            </div>
          </div>
        </div>

        <div class="mt-6 grid grid-cols-1 gap-4 md:grid-cols-2">
          <div>
            <h3 class="font-semibold">Información</h3>
            <p class="text-sm mt-2"><strong>Nombre:</strong> {{ usuario.nombre ?: '—' }}</p>
            <p class="text-sm mt-1"><strong>Email:</strong> {{ usuario.email ?: '—' }}</p>
            <p class="text-sm mt-1"><strong>Teléfono:</strong> {{ usuario.telefono ?: '—' }}</p>
          </div>
          <div>
            <h3 class="font-semibold">Dirección</h3>
            <p class="text-sm mt-2">{{ usuario.direccion ?: '—' }}</p>

            <h3 class="font-semibold mt-4">Roles</h3>
            <p class="text-sm mt-1">{{ usuario.roles ? usuario.roles|join(', ') : 'ROLE_USER' }}</p>
          </div>
        </div>
      </div>
    {% elseif usuarios is defined %}
      {# Fallback: listado clásico para cuando el controlador usa 'usuarios' #}
      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
          <thead>
            <tr>
              <th class="px-4 py-2">Id</th>
              <th class="px-4 py-2">Email</th>
              <th class="px-4 py-2">Nombre</th>
              <th class="px-4 py-2">Telefono</th>
              <th class="px-4 py-2">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {% for usuario in usuarios %}
              <tr class="border-t">
                <td class="px-4 py-2">{{ usuario.id }}</td>
                <td class="px-4 py-2">{{ usuario.email }}</td>
                <td class="px-4 py-2">{{ usuario.nombre }}</td>
                <td class="px-4 py-2">{{ usuario.telefono }}</td>
                <td class="px-4 py-2">
                  <a class="text-primary" href="{{ path('app_usuario_show', {'id': usuario.id}) }}">Ver</a>
                  <a class="ml-2" href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">Editar</a>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="5" class="px-4 py-2">No hay usuarios.</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% else %}
      <div>No hay datos de usuario disponibles.</div>
    {% endif %}
  </main>
{% endblock %}
